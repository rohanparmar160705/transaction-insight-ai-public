# ML Service Environment Variables
# Copy this file to .env and configure as needed

# Server Configuration
# PORT: The port on which the ML service will run
PORT=8001

# HOST: The host address (0.0.0.0 allows external connections)
HOST=0.0.0.0

# Model Configuration
# MODEL_PATH: Path to the trained model file (joblib format)
MODEL_PATH=./model.joblib

# ANOMALY_MODEL_PATH: Path to anomaly detection model (optional)
ANOMALY_MODEL_PATH=./anomaly_model.joblib

# Training Data
# TRAIN_DATA_PATH: Path to CSV file used for training
TRAIN_DATA_PATH=./transactions_train.csv

# Application Settings
# LOG_LEVEL: Logging verbosity (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# RELOAD: Enable auto-reload for development (set to false in production)
RELOAD=true

# Model Hyperparameters
# MIN_CONFIDENCE_THRESHOLD: Minimum confidence score to return prediction
MIN_CONFIDENCE_THRESHOLD=0.3

# MAX_FEATURES: Maximum number of features for TF-IDF vectorizer
MAX_FEATURES=5000

# ANOMALY_CONTAMINATION: Expected proportion of anomalies in dataset (0.01 = 1%)
ANOMALY_CONTAMINATION=0.05
ANOMALY_CONTAMINATION=0.05